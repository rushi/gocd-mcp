{
  "name": "gocd-mcp",
  "version": "0.3.0",
  "description": "MCP server for GoCD continuous delivery platform",
  "type": "module",
  "main": "dist/index.js",
  "author": "Rushi Vishavadia",
  "bin": {
    "gocd-mcp": "dist/index.js"
  },
  "scripts": {
    "start": "dotenv -e .env -- node dist/index.js",
    "dev": "dotenv -e .env -- tsx src/index.ts",
    "build": "tsc && tsc-alias",
    "format": "prettier --write -l src",
    "inspect": "echo 'Start server with: npm run dev' && npx @modelcontextprotocol/inspector",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "mcp",
    "gocd",
    "ci-cd",
    "continuous-delivery"
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "debug": "^4.4.3",
    "fast-xml-parser": "^5.3.3",
    "fastify": "^5.6.2",
    "got": "^14.6.5",
    "lodash-es": "^4.17.21",
    "pino": "^10.1.0",
    "qs": "^6.14.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.5",
    "@types/debug": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.19.2",
    "@types/pino": "^7.0.4",
    "@types/qs": "^6.14.0",
    "dotenv-cli": "^11.0.0",
    "nock": "^13.5.6",
    "prettier": "^3.7.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "semi": true,
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": false,
    "bracketSpacing": true,
    "useTabs": false,
    "arrowParens": "always",
    "bracketSameLine": false,
    "tabWidth": 4
  }
}
